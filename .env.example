# API Configuration
VITE_API_URL=http://localhost:4000/api

# Mock Mode
# Set to 'true' to use mock data instead of real backend
# Set to 'false' to use real backend API
VITE_USE_MOCK_DATA=true

# Mock Data Persistence
# Set to 'true' to persist mock data changes in localStorage
# Set to 'false' for in-memory only (resets on page refresh)
VITE_MOCK_PERSISTENCE=false

# Mock Network Delay (milliseconds)
# Simulates network latency for realistic testing
VITE_MOCK_DELAY=300
